<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/req_form_toolbar"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:elevation="4dp"
        android:layout_height="wrap_content"></androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selected_issue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flat tires"
                android:textColor="@color/blue_grey"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:background="@drawable/colourful_surounding"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="20dp"
                android:elevation="4dp"
                android:layout_marginRight="50dp"/>

<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="3dp"-->
<!--                android:layout_marginRight="50dp"-->
<!--                android:layout_marginLeft="50dp"-->
<!--                android:background="@drawable/whitey"-->
<!--                android:layout_marginBottom="20dp"/>-->

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:stretchColumns="0"
                android:shrinkColumns="0">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/req_pic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="25dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/camera_icon"
                            android:padding="1dp"
                            android:elevation="4dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Click to set icon*"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal"
                            android:textColor="@color/grey"/>

                    </LinearLayout>

                </TableRow>
            </TableLayout>

            <EditText
                android:id="@+id/req_car_make_and_model"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Make and model. eg: VW polo tsi"
                android:layout_marginTop="10dp"
                android:background="@drawable/big_box_edittext"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/req_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Any additional infomation?"
                android:layout_marginTop="10dp"
                android:background="@drawable/big_box_edittext"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/request_for_mechanic_butt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="REQUEST FOR A MECHANIC"
                android:background="@drawable/green_backg"
                android:padding="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>