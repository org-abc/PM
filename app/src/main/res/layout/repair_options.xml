<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0,1"
        android:shrinkColumns="0,1"
        android:id="@+id/all_options">

        <TableRow
            android:id="@+id/option_towing"
            android:tag="towing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/towing"
                    android:scaleType="centerCrop"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Towing"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="15dp"
                    android:background="@drawable/option_item"/>

            </FrameLayout>

        </TableRow>

        <TableRow
            android:id="@+id/option_tires"
            android:tag="tires"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tires"
                    android:scaleType="centerCrop"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Flat tire"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:background="@drawable/option_item"/>

            </FrameLayout>

        </TableRow>

        <TableRow
            android:id="@+id/option_engine"
            android:tag="engine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/engine"
                    android:scaleType="centerCrop"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Engine problems"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:background="@drawable/option_item"/>

            </FrameLayout>

        </TableRow>

        <TableRow
            android:id="@+id/option_battery"
            android:tag="battery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/battery"
                    android:scaleType="centerCrop"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Flat/dead battery"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:background="@drawable/option_item"/>

            </FrameLayout>

        </TableRow>

        <TableRow
            android:id="@+id/option_brakes"
            android:tag="brakes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/brakes"
                    android:scaleType="centerCrop"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Faulty brakes"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:background="@drawable/option_item"/>

            </FrameLayout>

        </TableRow>

        <TableRow
            android:id="@+id/option_electronics"
            android:tag="electronics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/electronics"
                    android:scaleType="centerCrop"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Electronics"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:background="@drawable/option_item"/>

            </FrameLayout>

        </TableRow>

        <TableRow
            android:id="@+id/option_lights"
            android:tag="lights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/headlights"
                    android:scaleType="centerCrop"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Lights"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:background="@drawable/option_item"/>

            </FrameLayout>

        </TableRow>

        <TableRow
            android:id="@+id/option_other"
            android:tag="other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/other"
                    android:scaleType="centerCrop"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Other"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:background="@drawable/option_item"/>

            </FrameLayout>

        </TableRow>

    </TableLayout>

</ScrollView>