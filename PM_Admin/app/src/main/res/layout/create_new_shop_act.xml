<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.mineDark"
    android:background="@color/blue_grey">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme.mineDark"
        android:background="@color/blue_grey">

    <android.support.v7.widget.Toolbar
        android:id="@+id/new_shop_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue_2"
        android:elevation="4dp"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="130dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click to set icon*"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:textColor="@color/grey"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/add_shop_icon"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/camera_icon"
                android:padding="1dp"
                android:elevation="4dp"/>

        </FrameLayout>

        <TextView
            android:id="@+id/create_shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/find_store_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to choose the mechanic*"
            android:background="@drawable/shop_button_backg"
            android:textColor="@color/white"
            android:padding="5dp"
            android:elevation="4dp"/>

        <TextView
            android:id="@+id/pass_no_match_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/red"
            android:text="Your password doesn't match"
            android:textStyle="bold"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/shop_pass_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:hint="password*"
                android:inputType="textPassword"
                android:gravity="center"
                android:backgroundTint="@color/light_blue_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/confirm_shop_pass_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:hint="Confirm password*"
                android:gravity="center"
                android:inputType="textPassword"
                android:backgroundTint="@color/light_blue_2"/>

        </LinearLayout>

        <TextView
            android:id="@+id/get_the_fuck_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/red"
            android:text="Get the fuck out"
            android:textStyle="bold"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/i_fucks_with_it_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:inputType="numberPassword"
                android:hint="I fucks with it pin*"
                android:gravity="center"
                android:backgroundTint="@color/light_blue_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:hint="Username*"
                android:gravity="center"
                android:backgroundTint="@color/light_blue_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:hint="First name*"
                android:gravity="center"
                android:backgroundTint="@color/light_blue_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/lname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:hint="Last name*"
                android:gravity="center"
                android:backgroundTint="@color/light_blue_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:hint="Email*"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/light_blue_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:hint="Phone number*"
                android:inputType="number"
                android:gravity="center"
                android:backgroundTint="@color/light_blue_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:hint="Bio*"
                android:gravity="center"
                android:backgroundTint="@color/light_blue_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/minimum_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:hint="Minimum fee*"
                android:gravity="center"
                android:inputType="number"
                android:backgroundTint="@color/light_blue_2"/>

        </LinearLayout>

        <Button
            android:id="@+id/save_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save mechanic"
            android:background="@drawable/share_button_backg"/>

    </LinearLayout>
</LinearLayout>

</ScrollView>