<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <fragment
                    android:id="@+id/mechanics_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="com.pocketmechanic.kondie.pocketmechanic.MapActivity"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_marginBottom="90dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                        <android.support.v7.widget.Toolbar
                            android:id="@+id/mechanic_map_toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="60dp"
                            android:layout_alignParentTop="true"></android.support.v7.widget.Toolbar>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/all_available_mechanic_list"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:background="@color/blue_grey"
                            android:layout_alignParentBottom="true"
                            android:elevation="4dp"></android.support.v7.widget.RecyclerView>

                </RelativeLayout>

        </FrameLayout>

</LinearLayout>
